<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- A part input and display -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:layout_margin="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/edt_Calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_below="@id/edt_Calculator"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_text"
            android:textSize="20sp"/>

    </RelativeLayout>

    <!-- two row next -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_key"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:layout_weight="1"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="2"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="3"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="+"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="C"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="4"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="5"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="6"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="-"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_clean_all"
                android:layout_width="@dimen/width_button_number"
                android:layout_height="@dimen/height_button_number"
                android:text="AC"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <!-- the rest -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/border_key"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

        <!-- a part the first in the left consist of two LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="7"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="8"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="9"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_mul"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="*"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>
                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="2"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_span="2"/>

                    <Button
                        android:id="@+id/btn_point"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="."
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_div"
                        android:layout_width="@dimen/width_button_number"
                        android:layout_height="@dimen/height_button_number"
                        android:layout_weight="1"
                        android:text="/"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_assign"
            android:layout_width="@dimen/width_button_number"
            android:layout_height="@dimen/height_button_assign"
            android:layout_weight="1"
            android:text="=" />

    </LinearLayout>

</LinearLayout>